<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_main"
    tools:context=".view.activity.MainActivity">

    <Button
        android:layout_marginTop="10dp"
        style="@style/main_activity_button"
        android:background="#12345678"
        android:id="@+id/btn_select_image"
        android:src="@drawable/button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/select_image"
        android:layout_centerInParent="true"  />

    <Button
        android:layout_marginBottom="10dp"
        style="@style/main_activity_button"
        android:background="#87654321"
        android:id="@+id/btn_start_game"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/start_game"
        android:layout_above="@id/btn_select_image"
        android:layout_alignLeft="@id/btn_select_image"/>

    <ImageButton
        android:background="#00000000"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:id="@+id/btn_user_image"
        android:src="@drawable/perm_group_personal_info"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp" />

    <ImageButton
        style="@style/main_activity_image_button"
        android:background="#00000000"
        android:id="@+id/btn_configure_game"
        android:src="@drawable/ic_settings"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="3dp" />

    <ImageButton
        android:background="#00000000"
        style="@style/main_activity_image_button"
        android:id="@+id/btn_about_game"
        android:src="@drawable/ic_menu_help_holo_light"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
